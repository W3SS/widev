<p id="notice"><%= notice %></p>

<h1>Listing Release Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Scratchable</th>
      <th>Remove</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @release_items.each do |release_item| %>
      <tr>
        <td><%= release_item.name %></td>
        <td><%= release_item.ftype %></td>
        <td><%= release_item.scratchable %></td>
        <td><%= release_item.remove %></td>
        <td><%= link_to 'Show', release_item %></td>
        <td><%= link_to 'Edit', edit_release_item_path(release_item) %></td>
        <td><%= link_to 'Destroy', release_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

