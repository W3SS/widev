<p id="notice">
  <%= notice %>
</p>

<h1>Listing Queries</h1>
<div class="well bs-component">
  <div class="row">
    <div class="col-md-12">

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Statment</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @queries.each do |query| %>
            <tr>
              <td>
                <%= query.title %>
              </td>
              <td>
                <%= query.statment %>
              </td>
              <td>
                <%= link_to 'Show', query %>
              </td>
              <td>
                <%= link_to 'Edit', edit_query_path(query) %>
              </td>
              <td>
                <%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
  <%= link_to 'New Query', new_query_path %>
</div>