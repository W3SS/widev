<p id="notice"><%= notice %></p>

<h1>Listing Reltypes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Short</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reltypes.each do |reltype| %>
      <tr>
        <td><%= reltype.name %></td>
        <td><%= reltype.color %></td>
        <td><%= reltype.short %></td>
        <td><%= link_to 'Show', reltype %></td>
        <td><%= link_to 'Edit', edit_reltype_path(reltype) %></td>
        <td><%= link_to 'Destroy', reltype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

