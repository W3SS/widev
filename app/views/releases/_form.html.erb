<%= bootstrap_form_for(@release) do |f| %>
  <% if @release.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@release.errors.count, "error") %> prohibited this release from being saved:</h2>

      <ul>
        <% @release.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <%= f.text_field :rel %>


        <div class="row">
          <div class="col-md-6">
            <strong>Note:</strong>
            <%= f.text_area :note, style: "height:300px",class: "rnoutcome" %>
          </div>
          <div class="col-md-6">
            <strong>Outcome:</strong>
            <%= f.text_area :outcome, style: "height:300px",class: "rnoutcome" %>
              </textarea>
          </div>

        </div>

        <div class="form-group">
  <div class="checkbox">
    <label>
      <input  name="release[completed]" type="checkbox"> Completed
    </label>
  </div>
</div>
    <div class="row">
      <div class="col-md-4">
                <%= f.date_field  :date %>

      </div>
    </div>
      


          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
            <%= form_for(@upload, html: { multipart: true, class: "dropzone"}) do |f|  %>
              <div class="fallback">
                <%= f.file_field :myfile %><br>
                  <%= f.submit "Upload" %>
              </div>
              <% end %>

                <script>
                  
                  flatpickr('.datepick');

                
                
                  $(document).ready(function() {
                    // disable auto discover
                    Dropzone.autoDiscover = false;

                    // grap our upload form by its id
                    $("#new_upload").dropzone({
                      // restrict image size to a maximum 1MB
                      maxFilesize: 1,
                      // changed the passed param to one accepted by
                      // our rails app
                      paramName: "upload[myfile]",
                      params: {
                        "upload[release_id]": <%= @release.id %>
                      },
                      // show remove links on each image upload
                      addRemoveLinks: true
                    });
                  });

                  $.material.init();
                </script>