<p id="notice"><%= notice %></p>

<h1>Listing Releases</h1>
 <div class="table-responsive">
  <table class="table">
  <thead>
    <tr>
      <th>Rel</th>
      <th>Date</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @releases.each do |release| %>
      <tr>
        <td><%= release.rel %></td>
        <td><%= release.date %></td>
        <td><%= release.completed %></td>
        <td><%= link_to 'Show', release %></td>
        <td><%= link_to 'Edit', edit_release_path(release) %></td>
        <td><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Release', new_release_path %>
