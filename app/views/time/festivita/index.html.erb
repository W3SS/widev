        <td><%= time_festivitum.festdate %></td>
        <td><%= link_to 'Show', time_festivitum %></td>
        <td><%= link_to 'Edit', edit_time_festivitum_path(time_festivitum) %></td>
        <td><%= link_to 'Destroy', time_festivitum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
