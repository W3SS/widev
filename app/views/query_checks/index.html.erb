<p id="notice"><%= notice %></p>

<h1>Listing Query Checks</h1>
<div class="row">
    <div class="col-md-12 well">
        <table  class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Rpt interval</th>
      <th>Is started</th>
      <th>Is paused</th>
      <th>Num exec</th>
      <th>Last exec dt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @query_checks.each do |query_check| %>
      <tr>
        <td><%= query_check.title %></td>
        <td><%= query_check.rpt_interval %> mins </td>
        <td><%= query_check.is_started %></td>
        <td><%= query_check.is_paused %></td>
        <td><%= query_check.num_exec %></td>
        <td><%= query_check.last_exec_dt %></td>
        <td><%= link_to 'Show', query_check %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
</div>

<br>

<%= link_to 'New Query check', new_query_check_path %>
