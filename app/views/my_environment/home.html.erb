<p id="notice"><%= notice %></p>


<div class="row" style="text-align: center"><div class="col-md-12">
  <h1>Listing Environments</h1>
  <table class="table table-bordered table-hover">
    <thead>
    <tr>
      <th>Env.</th>
      <th>Installation</th>
      <th>Informations</th>
    </tr>
    </thead>
    <tbody>
    <% @environments.each do |environment| %>
        <tr>
          <td>
            <strong><%= environment.name %></strong>
          </td>
          <td>
            <%= link_to  'Installation', '/my_environment/status?env_id='+environment.id.to_s  %>
          </td>
          <td>
            <%= link_to "Info ",'/my_environment/info?env_id='+environment.id.to_s  %>
          </td>
        </tr>

    <% end %>
    </tbody>

  </table>


</div></div>

