<p id="notice"><%= notice %></p>

<h1>Listing Rel Template Items</h1>

<div class="row">
    <div class="col-md-12">
        <table  class="table table-bordered">
            <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rel_template_items.each do |rel_template_item| %>
      <tr>
        <td><%= rel_template_item.name %></td>
        <td><%= rel_template_item.description %></td>
        <td><%= rel_template_item.note %></td>
        <td><%= link_to 'Show', rel_template_item %></td>
        <td><%= link_to 'Edit', edit_rel_template_item_path(rel_template_item) %></td>
        <td><%= link_to 'Destroy', rel_template_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

